{
  "name": "preact-marquee",
  "version": "1.5.0",
  "description": "A <marquee> component for Preact.",
  "author": "Adrian Ramin <adrian.ramin@gmail.com>",
  "main": "dist/Marquee.js",
  "types": "dist/Marquee.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:spring-media/preact-marquee.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "clean:dist": "rimraf dist/",
    "prebuild": "npm run clean:dist",
    "prettier": "prettier  --write 'src/**/*.{tsx,scss}'",
    "start": "webpack-dev-server -d --inline --hot --progress --no-info --open",
    "test": "cross-env NODE_ENV=test jest"
  },
  "devDependencies": {
    "@types/jest": "23.3.5",
    "cross-env": "5.2.0",
    "css-loader": "1.0.0",
    "cssnano": "4.1.7",
    "file-loader": "2.0.0",
    "html-webpack-plugin": "3.2.0",
    "identity-obj-proxy": "3.0.0",
    "img-loader": "3.0.1",
    "jest": "23.6.0",
    "lodash-ts-imports-loader": "1.2.0",
    "node-sass": "4.9.4",
    "postcss-cssnext": "3.1.0",
    "postcss-import": "12.0.0",
    "postcss-loader": "3.0.0",
    "pre-commit": "1.2.2",
    "preact-render-spy": "1.3.0",
    "prettier": "1.14.3",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "stylelint": "9.6.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-webpack-plugin": "0.10.5",
    "ts-jest": "23.10.5",
    "ts-loader": "5.2.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-loader": "3.6.0",
    "tslint-react": "3.6.0",
    "typescript": "3.1.3",
    "uglifyjs-webpack-plugin": "2.0.1",
    "url-loader": "1.1.2",
    "webpack": "4.26.1",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.10"
  },
  "dependencies": {
    "preact": "8.3.1"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "singleQuote": true
  },
  "jest": {
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.scss$": "identity-obj-proxy"
    }
  },
  "pre-commit": [
    "prettier"
  ]
}
